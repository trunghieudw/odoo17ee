<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_with_provider_viettelpost" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.viettelpost</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="ViettelPost Configuration" name="viettelpost_configuration"
                    invisble = "delivery_type != 'viettelpost'" >
                    <group>
                        <group>
                            <button name="get_access_token" type="object" string="Get Access Token"/>
                            <button name="get_viettelpost_stores" type="object" string="Get Stores"/>
                            <field name="viettelpost_username"  required = "delivery_type ==  'viettelpost'"/>
                            <field name="viettelpost_passwd"  required = "delivery_type ==  'viettelpost'"/>
                            <field name="viettelpost_token" />
                            <field name="viettelpost_print_token" />
                            <field name="viettelpost_default_service_type"  required = "delivery_type ==  'viettelpost'"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
