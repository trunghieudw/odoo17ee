<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_custom" model="ir.ui.view">
        <field name="name">res.company.form.inherit.account.custom</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Ahamove Technical">
                    <group>
                        <group>
                            <field name="token_aha"
                                   invisible="not token_aha "
                            />
                            <field name="ahamove_refresh_token"
                                   invisible="not ahamove_refresh_token"
                            />
                            <field name="ahamove_phone"/>
                            <label for="ahamove_api_key"/>
                            <div class="o_row">
                                <field name="ahamove_api_key"/>
                                <button name="button_set_token_aha"
                                        type="object"
                                        invisible="not ahamove_api_key">
                                    <i class="fa fa-arrow-right mr-1"/>Get Token
                                </button>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>