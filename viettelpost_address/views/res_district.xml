<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_district_tree" model="ir.ui.view">
        <field name="name">Districts</field>
        <field name="model">res.district</field>
        <field name="priority">51</field>
        <field name="arch" type="xml">
            <tree string="Districts" import="0">
                <field name="name" />
                <field name="code" />
                <field name="city_id" />
            </tree>
        </field>
    </record>

    <record id="view_res_district_form" model="ir.ui.view">
        <field name="model">res.district</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                    <button name="action_get_wards" type="object" string="Get Wards"></button>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_view_wards" type="object" class="oe_stat_button" icon="fa-globe" string="Wards"></button>
                    </div>
                    <group name="main_group">
                        <group name="district_details">
                            <field name="name" />
                            <field name="code" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_res_district_search" model="ir.ui.view">
        <field name="name">Districts</field>
        <field name="model">res.district</field>
        <field name="arch" type="xml">
            <search string="Districts">
                <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike',self)]" />
                <field name="city_id" />
                <group expand="0" string="Group By">
                    <filter name="group_by_city" string="City" context="{'group_by':'city_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_config_district" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">res.district</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_get_wards" model="ir.actions.server">
        <field name="name">Get Wards</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_district" />
        <field name="binding_model_id" ref="model_res_district" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    for r in records:
        r.action_get_wards()
        </field>
    </record>
</odoo>
