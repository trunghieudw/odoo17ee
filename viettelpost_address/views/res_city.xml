<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_city_tree" model="ir.ui.view">
        <field name="name">Cities</field>
        <field name="model">res.city</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Cities" import="0">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
                <field name="country_id" />
            </tree>
        </field>
    </record>

    <record id="view_res_city_form" model="ir.ui.view">
        <field name="model">res.city</field>
        <field name="arch" type="xml">
            <form create="0" delete="0">
                <header>
                    <button name="action_get_districts" type="object" string="Get Districts"></button>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button name="action_view_districts" type="object" class="oe_stat_button" icon="fa-globe" string="Districts"></button>
                    </div>
                    <group name="main_group">
                        <group name="city_details">
                            <field name="name" />
                            <field name="code" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_res_city_search" model="ir.ui.view">
        <field name="name">Cities</field>
        <field name="model">res.city</field>
        <field name="arch" type="xml">
            <search string="Cities">
                <field name="name" filter_domain="['|',('name','ilike',self),('code','ilike',self)]" />
                <field name="country_id" />
                <group expand="0" string="Group By">
                    <filter name="group_by_country" string="Country" context="{'group_by':'country_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_config_city" model="ir.actions.act_window">
        <field name="name">Cities</field>
        <field name="res_model">res.city</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_get_districts" model="ir.actions.server">
        <field name="name">Get Districts</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_res_city" />
        <field name="binding_model_id" ref="model_res_city" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    for r in records:
        r.action_get_districts()
        </field>
    </record>
</odoo>
