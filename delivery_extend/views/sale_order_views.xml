<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_extend_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.extend.form.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button string="Delivery Book" type="object" invisible ="not deli_book_id" name="action_view_delivery_book" class="oe_stat_button" icon="fa-pencil-square-o"/>
            </xpath>
            <field name="name" position="after">
                <field name="deli_book_id" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>


