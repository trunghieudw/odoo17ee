<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="put_in_pack_wizard_form_view" model="ir.ui.view">
        <field name="name">put.in.pack.wizard.form.view</field>
        <field name="model">put.in.pack.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="transfer_id" force_save="1"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="total_package" default_focus="1"/>
                    </group>
                </group>
                <footer>
                    <button name="button_validate" type="object" string="Validate" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_picking_put_in_pack_wizard_action" model="ir.actions.act_window">
        <field name="name">Put In Pack</field>
        <field name="res_model">put.in.pack.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>