<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="esms_set_information_wizard_form_view" model="ir.ui.view">
        <field name="name">esms.set.information.wizard.form.view</field>
        <field name="model">esms.set.information.wizard</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1><field name="esms_api_id" readonly="1" force_save="1"/></h1>
                </div>
                <group>
                    <field name="brand_name"/>
                    <field name="api_key"/>
                    <field name="secret_key"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Confirm" type="object" name="action_esms_set_api_key" class="btn btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="esms_set_information_wizard_action" model="ir.actions.act_window">
        <field name="name">Set API Key/Secret Key</field>
        <field name="res_model">esms.set.information.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>