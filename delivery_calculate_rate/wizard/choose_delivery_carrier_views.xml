<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="choose_delivery_carrier_view_form_inherit_cal_rate" model="ir.ui.view">
        <field name="name">choose.delivery.carrier.view_form.inherit.cal.rate</field>
        <field name="model">choose.delivery.carrier</field>
        <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="ahamove_service" invisible="delivery_type != 'ahamove'" required="delivery_type != 'ahamove'" />
            </xpath>
        </field>
    </record>
</odoo>